<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

	<!-- Charge les beans de CXF -->
	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml"/>

	<!-- DÃ©finition du Endpoint JAX-WS => pas besoin d'ecrire une classe pour publier le WS
		Reference une classe annotee @WebService 
		address: adresse relative, ici domain-name:port/war-name/zone
	-->
	<jaxws:endpoint 
		id="habitService"	
		implementor="com.inpranet.habit.service.HabitServiceImp" 	
		address="/habit" />
				
</beans>